<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.chendemo.dialog.CustomDialogForQuizz">

<TextView
    android:id="@+id/dialog_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Menu"
    android:textSize="36sp"
    android:gravity="center">
</TextView>
<RadioGroup
    android:id="@+id/quizz_radio_group"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    >
    <RadioButton
        android:id="@+id/quizz_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Center"
        android:gravity="left|center_vertical"/>
    <RadioButton
        android:id="@+id/quizz_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right"/>
</RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/custom_dialog_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Cancel"/>
    <Button
        android:id="@+id/custom_dialog_ok"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="OK"
        android:layout_gravity="center"/>
    </LinearLayout>
    </LinearLayout>
